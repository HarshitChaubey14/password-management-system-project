<%- include('header') %>
    <div class="container">
        <div class="row">
            <h1>Password Lists</h1>
            <br>
            <table class="table table-striped table-primary">
                <thead>
                    <tr>
                        <th>Password Category Name</th>
                        <th>Site URL</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(records.length>0){
                        records.forEach(function(row){
                        %>
                        <tr>
                            <td>
                                <%= row.password_category %>
                            </td>
                            <td>
                                <a href="<%= row.project_name %>" target="_blank">
                                    <%= row.project_name %>
                                </a>
                            </td>

                            <td>
                                <button type="button" class="btn btn-info btn-xs" data-toggle="modal"
                                    data-target="#<%= row._id %>"><i class="fa fa-eye"></i></button>
                                <a class="btn btn-primary btn-xs" href="/view-all-password/edit/<%= row._id %>"><i
                                        class="fa fa-edit"></i></a>
                                <a class="btn btn-danger btn-xs" href="/view-all-password/delete/<%= row._id %>"
                                    onclick="return confirm('Are you sure?')"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                        <!-- Modal -->
                        <div id="<%= row._id %>" class="modal fade" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">
                                            <%= row.project_name %>
                                        </h4>
                                    </div>
                                    <div class="modal-body">
                                        <%- row.password_detail %>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default"
                                            data-dismiss="modal">Close</button>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <% }) } %>
                </tbody>
            </table>
        </div>
    </div>
    <%- include('footer') %>